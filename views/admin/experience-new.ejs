<%- include('../partials/header') %>

<div class="cv-content">
    <h2>Ajouter une Exp&eacute;rience</h2>

    <form class="contact-form" method="POST" action="/admin/experiences">
        <div class="form-group">
            <label for="poste">Poste *</label>
            <input type="text" id="poste" name="poste" required>
        </div>
        <div class="form-group">
            <label for="periode">P&eacute;riode</label>
            <input type="text" id="periode" name="periode" placeholder="ex: 2022 - 2024">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4"></textarea>
        </div>
        <button type="submit" class="btn-submit">Ajouter</button>
    </form>

    <a href="/admin/experiences" class="btn-back">&larr; Retour aux exp&eacute;riences</a>
</div>

