<%- include('../partials/header') %>

<div class="cv-content">
    <h2>G&eacute;rer les Formations</h2>
    <a href="/admin/formations/new" class="btn-submit btn-add">+ Ajouter</a>

    <% if (formations.length > 0) { %>
        <% formations.forEach(f => { %>
            <div class="admin-item">
                <div>
                    <h3><%= f.etablissement %></h3>
                    <% if (f.localisation) { %><p><%= f.localisation %></p><% } %>
                    <span class="period"><%= f.periode %></span>
                    <% if (f.diplome) { %><p><strong><%= f.diplome %></strong></p><% } %>
                    <% if (f.description) { %><p class="description"><%= f.description %></p><% } %>
                </div>
                <form method="POST" action="/admin/formations/<%= f._id %>/delete"
                      onsubmit="return confirm('Supprimer cette formation ?')">
                    <button type="submit" class="btn-delete">Supprimer</button>
                </form>
            </div>
        <% }); %>
    <% } else { %>
        <p>Aucune formation enregistr&eacute;e.</p>
    <% } %>

    <a href="/admin" class="btn-back">&larr; Retour au tableau de bord</a>
</div>

<%- include('../partials/footer') %>
