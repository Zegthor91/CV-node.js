<%- include('../partials/header') %>

<div class="cv-content">
    <h2>Ajouter une Formation</h2>

    <form class="contact-form" method="POST" action="/admin/formations">
        <div class="form-group">
            <label for="etablissement">&Eacute;tablissement *</label>
            <input type="text" id="etablissement" name="etablissement" required>
        </div>
        <div class="form-group">
            <label for="localisation">Localisation</label>
            <input type="text" id="localisation" name="localisation">
        </div>
        <div class="form-group">
            <label for="periode">P&eacute;riode</label>
            <input type="text" id="periode" name="periode" placeholder="ex: 2020 - 2023">
        </div>
        <div class="form-group">
            <label for="diplome">Dipl&ocirc;me</label>
            <input type="text" id="diplome" name="diplome">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4"></textarea>
        </div>
        <button type="submit" class="btn-submit">Ajouter</button>
    </form>

    <a href="/admin/formations" class="btn-back">&larr; Retour aux formations</a>
</div>

<%- include('../partials/footer') %>
