<%- include('../partials/header') %>

<div class="cv-content">
    <h2>Contact</h2>

    <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
    <% } %>

    <form class="contact-form" method="POST" action="/contact">
        <div class="form-group">
            <label for="name">Nom *</label>
            <input type="text" id="name" name="name" value="<%= form.name || '' %>" required>
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" id="email" name="email" value="<%= form.email || '' %>" required>
        </div>
        <div class="form-group">
            <label for="message">Message *</label>
            <textarea id="message" name="message" rows="5" required><%= form.message || '' %></textarea>
        </div>
        <button type="submit" class="btn-submit">Envoyer</button>
    </form>

    <% if (profile.email) { %>
        <p style="margin-top: 20px; color: #9ca3af;">Ou contactez-moi directement : <a href="mailto:<%= profile.email %>" style="color: #6366f1;"><%= profile.email %></a></p>
    <% } %>
</div>

<%- include('../partials/footer') %>
